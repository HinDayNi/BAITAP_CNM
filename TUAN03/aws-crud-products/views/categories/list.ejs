<!DOCTYPE html>
<html>

<head>
    <title>Manage Categories</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #eef3f8;
        }

        h1 {
            color: #1b4b8a;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            margin-top: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background: #d0e2ff;
            color: #1b4b8a;
        }

        .add-btn {
            background: #1b4b8a;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
        }

        .back {
            float: right;
            margin-top: -40px;
        }
    </style>
</head>

<body>
    <h1>Categories</h1>
    <a href="/products" class="back">Back to Products</a>

    <% if (user.role==='admin' ) { %>
        <a href="/categories/add" class="add-btn">Add Category</a>
        <% } %>

            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <% if (user.role==='admin' ) { %>
                            <th>Actions</th>
                            <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(c=> { %>
                        <tr>
                            <td>
                                <%= c.name %>
                            </td>
                            <td>
                                <%= c.description %>
                            </td>
                            <% if (user.role==='admin' ) { %>
                                <td>
                                    <a href="/categories/edit/<%= c.categoryId %>" style="margin-right: 10px;">Edit</a>
                                    <a href="/categories/delete/<%= c.categoryId %>"
                                        onclick="return confirm('Delete category? Products will remain.')"
                                        style="color: red;">Delete</a>
                                </td>
                                <% } %>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
</body>

</html>