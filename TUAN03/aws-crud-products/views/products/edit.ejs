<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #eef3f8;
        }

        form {
            background: white;
            padding: 20px;
            max-width: 500px;
            margin: 0 auto;
            border-radius: 4px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #1b4b8a;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input,
        select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            background: #1b4b8a;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .cancel {
            text-decoration: none;
            color: #666;
            margin-left: 10px;
        }

        .current-img {
            margin-top: 5px;
            display: block;
            max-width: 100px;
        }
    </style>
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <form action="/products/edit" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= product.id %>">
        <input type="hidden" name="oldImage" value="<%= product.url_image %>">

        <div class="form-group">
            <label>Product Name</label>
            <input type="text" name="name" value="<%= product.name %>" required>
        </div>

        <div class="form-group">
            <label>Category</label>
            <select name="categoryId" required>
                <% categories.forEach(c=> { %>
                    <option value="<%= c.categoryId %>" <%=product.categoryId===c.categoryId ? 'selected' : '' %>><%=
                            c.name %>
                    </option>
                    <% }) %>
            </select>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="number" step="0.01" name="price" value="<%= product.price %>" required>
        </div>

        <div class="form-group">
            <label>Quantity</label>
            <input type="number" name="quantity" value="<%= product.quantity %>" required>
        </div>

        <div class="form-group">
            <label>Image (Leave blank to keep current)</label>
            <input type="file" name="image" accept="image/*">
            <% if(product.url_image) { %>
                <img src="<%= product.url_image %>" class="current-img">
                <% } %>
        </div>

        <button type="submit">Update Product</button>
        <a href="/products" class="cancel">Cancel</a>
    </form>
</body>

</html>